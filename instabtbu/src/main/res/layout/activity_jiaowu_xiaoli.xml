            android:src="@drawable/xiaoli_02" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/xiaoli_03" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
